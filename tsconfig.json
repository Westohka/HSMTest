{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": false,
        "target": "es6",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}